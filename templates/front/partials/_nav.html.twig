 
 <!-- Nav -->
{% if app.session.get('theme') %}
{% set theme = app.session.get('theme') %}
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-{{ theme == 'Allocine' ? 'yellow' : 'dark' }}">
        <div class="container-fluid">
            <a href="{{ path('default') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                <img src="{{ asset('favicon.png') }}" height="24" alt="Logo O'flix">
                <span class="header-logo__title {{ theme == 'Allocine' ? 'text-dark' : 'text-white' }}">O'flix</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="{{ theme == 'Allocine' ? 'allocineText' : 'netflix' }}">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'default' ? 'active' : '' }}" href="{{ path('default') }}" id="{{ theme == 'Allocine' ? 'allocine' : 'netflix' }}">Accueil</a>                        
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_front_movie_search' ? 'active' : '' }}" href="{{ path('app_front_movie_search') }}" id="{{ theme == 'Allocine' ? 'allocine' : 'netflix' }}"><i class="bi bi-film"></i> Films, séries TV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_front_movie_favorites' ? 'active' : '' }}" href="{{ path('app_front_movie_favorites') }}" id="{{ theme == 'Allocine' ? 'allocine' : 'netflix' }}"><i class="bi bi-bookmark"></i> Ma liste</a>
                    </li>
                </ul>
                
                {% include "front/partials/_user_nav.html.twig" %}

                <form class="d-flex" action="{{ path('app_front_movie_search') }}">
                    <input class="form-control form-control-sm me-2" name="search" type="search" placeholder="Recherche par titre">
                    <button class="btn btn-outline-{{ theme == 'Allocine' ? 'dark' : 'danger' }}" type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </div>
    </nav>

{% else %}
        
