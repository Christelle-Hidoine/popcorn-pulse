{% extends 'base.html.twig' %}

{% block body %}
    {# movieForTwig #}
        {% dump(movieForTwig) %}
        
        {#
        array:8 [▼
            "type" => "Série"
            "title" => "Game of Thrones"
            "release_date" => 2011
            "duration" => 52
            "summary" => "Neuf familles nobles se battent pour le contrôle des terres de Westeros, tandis qu'un ancien ennemi revient..."
            "synopsis" => "Il y a très longtemps, à une époque oubliée, une force a détruit l'équilibre des saisons. Dans un pays où l'été peut durer plusieurs années et l'hiver toute une ▶"
            "poster" => "https://m.media-amazon.com/images/M/MV5BYTRiNDQwYzAtMzVlZS00NTI5LWJjYjUtMzkwNTUzMWMxZTllXkEyXkFqcGdeQXVyNDIzMzcwNjc@._V1_SX300.jpg"
            "rating" => 4.7
            ]
        #}
    <!-- main -->

    <div class="container bg-light pt-5">

        <div class="row mb-2">

            <div class="col">

                <div
                    class="row g-0 border rounded overflow-hidden flex-md-row align-items-start mb-4 shadow-smmm position-relative">
                    <div class="col-4 movie__poster img-thumbnail"
                        style="background-image: url({{ movieForTwig.poster }})">
                        <img src="{{ asset('images/poster-placeholder.png') }}" class="img-fluid">
                        <!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
                    </div>

                    <div class="col-8 p-4 d-flex flex-column position-static bg-light">
                        <a href="{{ path('add_favorites', {'id': movieId }) }}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-plus"></i></a>
                        <strong class="d-inline-block mb-2 text-primary">{{ movieForTwig.type.name }}</strong>
                        <h3 class="mb-1">{{ movieForTwig.title }}</h3>
                            <div class="mb-1 text-muted">{{ movieForTwig.duration }} min</div>

                            <p>
                            {% for genre in movieForTwig.genres %}

                                <span class="badge bg-warning text-dark">{{ genre.name }}</span>

                            {% endfor %}    
                            </p>

                            <p>{{ movieForTwig.synopsis }}</p>

                            {% include 'front/partials/_stars.html.twig' with {'ratingStars': movieForTwig.rating} %}
                            
                            {# on conditionne la partie saison que pour les série #}
                            {% if movieForTwig.type.name == 'Série' %}

                                {# on détermine le nombre de saison avec le filter |length + condition pour l'affichage au pluriel #}
                                <h2>{{ movieForTwig.seasons|length }} {{ movieForTwig.seasons|length > 1 ? 'Saisons' : 'Saison' }}</h2>

                                    <ul class="list-unstyled">

                                    {# on trie les saisons dans l'ordre croissant avec le filter |sort en comparant avec l'opérateur spaceship =
                                    An int less than, equal to, or greater than zero when $a is less than, equal to, or greater than $b, respectively.#}
                                    {% for season in movieForTwig.seasons|sort((a, b) => a.number <=> b.number) %} 
                                        {% dump(season) %}
                                        <li><span class="badge bg-danger fs-6 mb-2">Saison {{ season.number }}</span><small class="ms-1">({{ season.nbEpisodes }} épisodes)</small></li>
                                    {% endfor %}
                                    </ul>

                            {% endif %}
                            

                            <dl class="row">
                                <dt class="col-sm-12">Avec</dt>
                                <dd class="col-sm-12">

                                {# classement des acteurs par ordre de creditOrder #}
                                {# {% for casting in movieForTwig.castings|sort((a, b) => a.creditOrder <=> b.creditOrder) %} #}

                                {# données déjà triées par creditOrder via MainController méthode show avec findBy() #}
                                {% for casting in allCasting %}

                                    {{ casting.persons.firstname }} {{ casting.persons.lastname }} {{ casting.creditOrder }} ({{ casting.role }})<br>

                                {% endfor %}    

                                </dd>
                                <dt class="col-sm-12">Pays</dt>
                                <dd class="col-sm-12">{{ movieForTwig.country }}</dd>
                                <dt class="col-sm-12">Année</dt>
                                <dd class="col-sm-12">{{ movieForTwig.releaseDate|date("Y") }}</dd>
                            </dl>

                            <div class="d-grid gap-2 d-md-flex mb-5 me-5 justify-content-md-end">
                                <a href="{{ path('add_review', {'id': movieId }) }}" class="btn btn-warning btn-lg" role="button" aria-disabled="false">Ajouter une critique</a>
                            </div>

                            {# affichage des critiques #}
                            {% for review in reviews %}
                
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">{{ review.username }}</h6>

                                         {% include 'front/partials/_stars.html.twig' with {'ratingStars': review.rating} %}

                                        <em><p class="card-text">{{ review.content}}</p>
                                        <p class="card-subtitle mb-2 text-muted">Vu le {{ review.watchedAt|date('d-m-Y') }}<p></em>

                                    </div>
                                </div>

                            {% else %}

                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <em><p><span class="ps-1">Ce film n'a pas encore de critique<p></span></em>
                                    </div>
                                </div>
                                
                            {% endfor %} 
                    </div>   
                </div>
            </div>
        </div>
    </div>

{% endblock %}