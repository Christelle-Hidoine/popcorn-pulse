{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}

<div class="container my-4">
    <div class="my-2 py-2 text-center">

        <h1>Movie</h1>

        <div class="table-responsive ms-auto">
               
            <table class="table table-striped table-sm table-list">
                <tbody>
                    <tr>
                        <th class ="align-middle" scope="row">Id</th>
                        <td class ="align-bottom text-start">{{ movie.id }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Title</th>
                        <td class ="align-bottom text-start">{{ movie.title }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Duration</th>
                        <td class ="align-bottom text-start">{{ movie.duration }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Rating</th>
                        <td class ="align-bottom text-start">{{ movie.rating }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Summary</th>
                        <td class ="align-bottom text-wrap text-start">{{ movie.summary }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Synopsis</th>
                        <td class ="align-bottom text-wrap text-start">{{ movie.synopsis }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">ReleaseDate</th>
                        <td class ="align-bottom text-start">{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Country</th>
                        <td class ="align-bottom text-start">{{ movie.country }}</td>
                    </tr>
                    <tr>
                        <th class ="align-middle" scope="row">Poster</th>
                        <td class ="align-bottom text-start">{{ movie.poster }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_back_movie_index') }}" class="btn btn-warning btn-md review-btn mb-2" role="button" aria-disabled="true">Back to list</a>
                <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}" class="btn btn-secondary btn-md review-btn mb-2" role="button" aria-disabled="true">Edit</a>

                {{ include('back/movie/_delete_form.html.twig') }}
            </div>
        </div>
        
    </div>    
</div>    
    
{% endblock %}