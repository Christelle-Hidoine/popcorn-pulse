{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="my-3 py-3 text-center mx-sm-0 mx-md-3">
        <h1>User index</h1>
		    
            <div class="d-flex justify-content-end gap-3 mb-5">
                <a href="{{ path('app_back_user_new') }}" class="btn btn-success btn-lg my-2" role="button" aria-disabled="true">Create new</a>
            </div>

        <div class="table-responsive">
               
            <table class="table table-striped table-sm table-list">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    {# <th scope="col">Password</th> #}
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th class ="align-middle" scope="row">{{ user.id }}</th>
                        <td class ="align-middle fw-bolder">{{ user.email }}</td>
                        <td class ="align-middle">{{ user.roles ? user.roles|json_encode : '' }}</td>
                        {# <td>{{ user.password }}</td> #}
                        <td>
                            <a href="{{ path('app_back_user_show', {'id': user.id}) }}" class="btn btn-outline-dark btn-md review-btn mb-2" role="button" aria-disabled="true">Show</a>
                            <a href="{{ path('app_back_user_edit', {'id': user.id}) }}"class="btn btn-secondary btn-md review-btn mb-2" role="button" aria-disabled="true">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>    
    </div>
</div>        
{% endblock %}