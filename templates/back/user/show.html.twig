{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="my-2 py-2 text-center">

        <h1>User</h1>

        <div class="table-responsive d-flex justify-content-center mt-5">
            <div class="col-sm-12 col-md-6">   
                <table class="table table-striped table-sm">
                    <tbody>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Id</th>
                            <td class ="align-bottom text-start">{{ user.id }}</td>
                        </tr>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Email</th>
                            <td class ="align-bottom text-start">{{ user.email }}</td>
                        </tr>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Roles</th>
                            <td class ="align-bottom text-start">{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Password</th>
                            <td class ="align-bottom text-start text-break">{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-center gap-3">
                    <a href="{{ path('app_back_user_index') }}"class="btn btn-warning btn-md review-btn mb-2" role="button" aria-disabled="true">Back to list</a>
                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}"class="btn btn-secondary btn-md review-btn mb-2" role="button" aria-disabled="true">Edit</a>
                    {{ include('back/user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>    
</div>
        
{% endblock %}