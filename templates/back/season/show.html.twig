{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="my-2 py-2 text-center">

        <h1>Season</h1>
    
        <div class="table-responsive d-flex justify-content-center mt-5">
            <div class="col-sm-12 col-md-6 col-lg-8">
                <table class="table table-striped table-list">
                    <tbody>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Id</th>
                            <td class ="align-bottom text-start">{{ season.id }}</td>
                        </tr>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">Number</th>
                            <td class ="align-bottom text-start">{{ season.number }}</td>
                        </tr>
                        <tr class="table-list">
                            <th class ="align-middle" scope="row">NbEpisodes</th>
                            <td class ="align-bottom text-start">{{ season.nbEpisodes }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-center gap-3 mt-5">
                    <a href="{{ path('app_back_season_index') }}" class="btn btn-warning btn-md review-btn mb-2" role="button" aria-disabled="true">Back to list</a>
                    <a href="{{ path('app_back_season_edit', {'id': season.id}) }}" class="btn btn-secondary btn-md review-btn mb-2" role="button" aria-disabled="true">Edit</a>
                    
                {{ include('back/season/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>    
</div>  

{% endblock %}
