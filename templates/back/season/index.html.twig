{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="my-3 py-3 text-center mx-sm-0 mx-md-3">

        <h1 class="text-muted my-2">Season index</h1>

            {% for message in app.flashes("success") %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            
            {% endfor %}

            <div class="d-flex justify-content-end gap-3 mb-5">
                <a href="{{ path('app_back_season_new') }}" class="btn btn-success btn-lg my-2" role="button" aria-disabled="true">Create new</a>
            </div>

            <div class="table-responsive">
                
                <table class="table table-striped table-sm table-list">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Number</th>
                            <th scope="col">NbEpisodes</th>
                            <th scope="col">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for season in seasons %}
                        <tr>
                            <th class ="align-middle" scope="row">{{ season.id }}</td>
                            <td class ="align-middle">{{ season.number }}</td>
                            <td class ="align-middle">{{ season.nbEpisodes }}</td>
                            <td>
                                <a href="{{ path('app_back_season_show', {'id': season.id}) }}" class="btn btn-outline-dark btn-lg review-btn mb-2" role="button" aria-disabled="true">Show</a>
                                <a href="{{ path('app_back_season_edit', {'id': season.id}) }}" class="btn btn-secondary btn-lg review-btn mb-2" role="button" aria-disabled="true">Edit</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigation d-flex justify-content-center">
            	{{ knp_pagination_render(seasons) }}
        	</div>
    </div>
</div>        
{% endblock %}