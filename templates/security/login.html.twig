{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container-md bg-light my-5 border-top d-flex">
    <div class="row m-auto">

        <div class="col">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <h4 class="text-muted my-5">Vous êtes bien connecté en tant que {{ app.user.userIdentifier }}</h4>
                    <div class="mb-3"></div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Veuillez vous authentifier</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3 mt-1" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control mt-1" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div>
                <p>Pas encore de compte O'Flix ? <a href="{{ path('app_front_user_new') }}">Inscrivez-vous ici</a></p>
                </div>

                <button class="btn btn-lg btn-primary my-3" type="submit">
                    Sign in
                </button>
                
            </form>
        </div>
    </div>
</div>            
{% endblock %}
